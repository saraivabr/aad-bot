{
  "name": "aad",
  "version": "1.0.0",
  "description": "WhatsApp bot com inteligência conversacional avançada - AI-powered conversational intelligence with semantic memory, intent detection, emotional intelligence, and multi-persona system",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop whatsapp-bot",
    "restart:pm2": "pm2 restart whatsapp-bot",
    "logs:pm2": "pm2 logs whatsapp-bot",
    "test": "node tests/test_bot.js",
    "test:humanization": "node tests/test_humanization.js",
    "test:onboarding": "node tests/test_onboarding.js",
    "test:strategy": "node tests/test_strategy.js",
    "test:e2e": "node tests/test_end_to_end.js",
    "test:enhanced": "node tests/test_enhanced_architecture.js",
    "test:all": "node tests/test_bot.js && node tests/test_humanization.js && node tests/test_onboarding.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "ai",
    "chatbot",
    "langchain",
    "openai",
    "gemini",
    "conversational-ai",
    "semantic-memory",
    "emotional-intelligence"
  ],
  "author": "Saraiva",
  "license": "ISC",
  "dependencies": {
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.7",
    "@langchain/google-genai": "^2.1.2",
    "@langchain/openai": "^1.2.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "langchain": "^1.2.2",
    "pg": "^8.16.3",
    "pm2": "^6.0.14",
    "puppeteer": "^24.34.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.2"
  }
}
